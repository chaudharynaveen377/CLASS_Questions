class Solution {
    static int solve(String s){
        if(s.length()==1 || s.isEmpty())return 0;

       if(s.charAt(0)==s.charAt(s.length()-1)){
        return solve(s.substring(1,s.length()-1));
       }
       else{
        int left=1+solve(s.substring(0,s.length()-1));
        int right=1+solve(s.substring(1,s.length()));
        return Math.min(left,right);
       }
    }

    static int dp[][]=new int[500][500];

     static int solvex(String s,int i,int j){
        if(i>=j)return 0;
        if(dp[i][j]!=-1)return dp[i][j];
       if(s.charAt(i)==s.charAt(j)){
        return dp[i][j]= solvex(s,i+1,j-1);
       }
       else{
        int left=1+solvex(s,i,j-1);
        int right=1+solvex(s,i+1,j);
        return dp[i][j]=  Math.min(left,right);
       }
    }
    public int minInsertions(String s) {
        for(int i=0;i<s.length();i++){
            Arrays.fill(dp[i],-1);
        }
        return solvex(s,0,s.length()-1);
    }
}
